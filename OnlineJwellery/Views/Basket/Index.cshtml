@model IEnumerable<OnlineJwellery.Entities.Basket>

@{
    ViewBag.Title = "Basket";
}

<h2>Your Basket</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
 
@foreach (var item in Model) {
     @Html.Partial("_OrderItems", item)
}
@if (Model.Count() > 0)
{
    <tr>
        <td colspan="5" align="right">Total Amount: </td>
    <td> @ViewBag.TotalAmount</td>
    </tr>
}
</table>
<p>
    @Html.ActionLink("Continue Shopping", "ContinueShopping") |
   @if (Model.Count() > 0)
   { @Html.ActionLink("Purchase", "Purchase") }
    
</p>